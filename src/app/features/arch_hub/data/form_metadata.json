          }
        }
      ]
    },
    {
      "title": "Integration & Management",
      "id": "integrationManagement",
      "icon": "ti ti-plug",
      "type": "accordion",
      "fields": [
        {
          "sequence": 28,
          "type": "checkbox",
          "title": "Externally Managed Service",
          "field": "externallyManagedService",
          "isRequired": false,
          "columnSize": 6,
          "isList": true,
          "heading": "External",
          "listType": "boolean",
          "validation": {
            "required": false
          }
        },
        {
          "sequence": 29,
          "type": "textbox",
          "title": "Integration Point ID",
          "field": "integrationPointId",
          "isRequired": false,
          "columnSize": 6,
          "isList": true,
          "heading": "Integration ID",
          "listType": "text",
          "placeholder": "e.g., INT_MOB_001",
          "validation": {
            "required": false,
            "pattern": "^INT_[A-Z0-9_]+$",
            "customMessage": "Integration ID must start with INT_ followed by uppercase letters, numbers, and underscores"
          }
        },
        {
          "sequence": 30,
          "type": "textbox",
          "title": "Application Replacement ID",
          "field": "applicationReplacementId",
          "isRequired": false,
          "columnSize": 6,
          "placeholder": "e.g., REP_001",
          "validation": {
            "required": false,
            "pattern": "^REP_[A-Z0-9_]+$",
            "customMessage": "Replacement ID must start with REP_ followed by uppercase letters, numbers, and underscores"
          }
        }
      ]
    },
    {
      "title": "System Metadata",
      "id": "systemMetadata",
      "icon": "ti ti-settings",
      "type": "accordion",
      "fields": [
        {
          "sequence": 31,
          "type": "checkbox",
          "title": "Is Active",
          "field": "is_active",
          "isRequired": true,
          "columnSize": 6,
          "defaultValue": true,
          "validation": {
            "required": true,
            "customMessage": "Please specify if the application is active"
          }
        },
        {
          "sequence": 32,
          "type": "textbox",
          "title": "Created By",
          "field": "created_by",
          "isRequired": true,
          "columnSize": 6,
          "defaultValue": "system",
          "readonly": true,
          "validation": {
            "required": true,
            "customMessage": "Created by field is required"
          }
        },
        {
          "sequence": 33,
          "type": "datetime",
          "title": "Created On",
          "field": "created_on",
          "isRequired": true,
          "columnSize": 6,
          "defaultValue": "2024-01-20T14:22:00Z",
          "readonly": true,
          "validation": {
            "required": true,
            "customMessage": "Created date is required"
          }
        },
        {
          "sequence": 34,
          "type": "textbox",
          "title": "Updated By",
          "field": "updated_by",
          "isRequired": true,
          "columnSize": 6,
          "defaultValue": "system",
          "readonly": true,
          "validation": {
            "required": true,
            "customMessage": "Updated by field is required"
          }
        },
        {
          "sequence": 35,
          "type": "datetime",
          "title": "Updated On",
          "field": "updated_on",
          "isRequired": true,
          "columnSize": 6,
          "defaultValue": "2024-01-20T14:22:00Z",
          "readonly": true,
          "validation": {
            "required": true,
            "customMessage": "Updated date is required"
          }
        }
      ]
    }
  ]
}
